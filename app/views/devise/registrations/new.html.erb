<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render 'shared/error_messages', resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "you@example.com", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "John Gault", autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em class="help">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Password", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
