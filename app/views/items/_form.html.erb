<%= form_with(model: item, url: [location, item], local: true) do |form| %>

  <%= render 'shared/error_messages', resource: item %>

  <div class="field">
    <% if form.object.has_image? %>
      <%= form.hidden_field :image, value: form.object.image.signed_id %>
      <%= image_tag form.object.image_urls[:medium] %>
    <% end %>

    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.text_field :name, placeholder: "Name", required: true, autocomplete: false %>
  </div>

  <div class="field">
    <%= form.text_field :price, placeholder: "Price", autocomplete: false %>
  </div>

  <div class="field">
    <%= form.text_area :description, placeholder: "Description", autocomplete: false %>
  </div>

  <div class="actions">
    <%= form.submit action_label %>
  </div>

<% end %>
