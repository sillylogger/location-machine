<%= link_to 'Back', location_path(@location) %>

<%= render 'form',
  location: @location,
  action_label: "Save",
  show_items: false,
  show_description: true %>

<script>
  lm.utils.ready(function() {
    var center = <%= Setting.get('map.center').to_json.html_safe %>;
    var map = new lm.Map(center);

    map.setCurrentPosition();

    var loc = <%= @location.to_json.html_safe %>;
    map.placeClearableLocation(loc);

    map.hydrateLatLng('location_latitude',
                      'location_longitude');
  });
</script>

<hr/>

<%= button_to "Delete", location_path(@location), data: { confirm: "Are you sure?" }, method: :delete, class: "m--danger" %>
