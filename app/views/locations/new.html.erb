<%= render 'form',
  location: @location,
  action_label: t('lm.action.create', default: "Create"),
  show_items: true,
  show_description: false %>

<script>
  lm.utils.ready(function() {
    var center = <%= Setting.get('map.center').to_json.html_safe %>;
    var map = new lm.Map(center);

    map.hydrateLatLng('location_latitude', 'location_longitude');

    map.setCurrentPosition({ newLocation: true });
  });
</script>


